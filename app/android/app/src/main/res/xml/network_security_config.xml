<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Protect Firebase configuration from reverse engineering -->
    <!-- Only allow connections to Firebase and API endpoints -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">dev-challenge.micheltlutz.me</domain>
        <domain includeSubdomains="true">firebase.googleapis.com</domain>
        <domain includeSubdomains="true">firebaseapp.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
    </domain-config>
    
    <!-- Base configuration: deny cleartext by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

